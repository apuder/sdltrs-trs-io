PROG	 = sdltrs

SRCS	+= blit.c
SRCS	+= debug.c
SRCS	+= dis.c
SRCS	+= error.c
SRCS	+= load_cmd.c
SRCS	+= load_hex.c
SRCS	+= main.c
SRCS	+= trs_cassette.c
SRCS	+= trs_chars.c
SRCS	+= trs_disk.c
SRCS	+= trs_hard.c
SRCS	+= trs_imp_exp.c
SRCS	+= trs_interrupt.c
SRCS	+= trs_io.c
SRCS	+= trs_memory.c
SRCS	+= trs_mkdisk.c
SRCS	+= trs_printer.c
SRCS	+= trs_sdl_gui.c
SRCS	+= trs_sdl_interface.c
SRCS	+= trs_sdl_keyboard.c
SRCS	+= trs_state_save.c
SRCS	+= trs_stringy.c
SRCS	+= trs_uart.c
SRCS	+= z80.c
SRCS	+= PasteManager.c

OBJS	 = ${SRCS:.c=.o}

ENDIAN	!= echo; echo "ab" | od -x | grep "6261" > /dev/null || echo "-Dbig_endian"
INCS	!= sdl-config --cflags
LIBS	!= sdl-config --libs
LIBS	+= -lcurses -lreadline
MACROS	 = -DREADLINE -DZBX
X11INC	?= -I/usr/X11R7/include
X11LIB	?= -L/usr/X11R7/lib -lX11 -Wl,-R/usr/X11R7/lib
DEBUG	?= -g
CFLAGS	+= -Wall ${DEBUG} ${INCS} ${X11INC} ${ENDIAN} ${MACROS}

${PROG}: ${OBJS}
	${CC} -o ${PROG} ${OBJS} ${LIBS} ${X11LIB} ${LDFLAGS}

.PHONY: clean
clean:
	rm -f ${OBJS} ${PROG}
